WORDPRESS_URL="https://wordpress.com"
WORDPRESS_HOSTNAME="wordpress.com"

# If using the revalidate plugin
# You can generate by running `openssl rand -base64 32` in the terminal
WORDPRESS_WEBHOOK_SECRET="your-secret-key-here"


# MongoDB Configuration
MONGODB_URI="mongodb+srv://<user>:<password>@<cluster-url>/<database-name>?retryWrites=true&w=majority"

# JSON Web Token (JWT) Configuration
# Use a strong, random string for your JWT secret (e.g., generated from a password manager or online generator)
JWT_SECRET="your-super-secret-and-long-jwt-key"
# JWT Token Expiration (e.g., 1h, 7d, 30d)
JWT_EXPIRES_IN="7d"

# iDrive E2 S3-Compatible Storage Configuration
IDRIVE_E2_ACCESS_KEY_ID="your_idrive_e2_access_key_id"
IDRIVE_E2_SECRET_ACCESS_KEY="your_idrive_e2_secret_access_key"
IDRIVE_E2_BUCKET_NAME="your_idrive_e2_bucket_name"
IDRIVE_E2_REGION="your_idrive_e2_bucket_region" # e.g., "us-east-1" or your specific region code
IDRIVE_E2_ENDPOINT="https://your_idrive_e2_endpoint_url" # e.g., "s3.us-east-1.idrivee2-22.com"

# Nodemailer Configuration (for sending emails)
# Example for Gmail SMTP - replace with your email provider's details
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT="587" # Or 465 for SSL
EMAIL_USER="your-email@example.com"
EMAIL_PASS="your-email-password-or-app-password"
EMAIL_FROM="'KiawaNotes Support' <support@kiawanotes.com>" # Sender name and email

# Application URL (used for constructing links in emails, etc.)
# This should be the public URL where your Next.js app is hosted
NEXT_PUBLIC_APP_URL="http://localhost:3000" # For development
# NEXT_PUBLIC_APP_URL="https://www.kiawanotes.com" # For production
